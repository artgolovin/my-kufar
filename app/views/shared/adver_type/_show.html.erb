<div class="row justify-content-center">
  <div class="card w-50">
    <div class="card text-center">
      <h5 class="card-header"> <%= adver_type.name %> </h5>
        <div class="card-body">
          <%= link_to "Edit", edit_adver_type_path(adver_type), class: 'btn btn-primary' %>

          <% if policy(adver_type).destroy? %> 
            <%= link_to "Destroy", adver_type_path(adver_type), method: :delete, role: 'button', class: 'btn btn-secondary mr-2' %>
          <% end %>  
        </div>
    </div>
  </div>
</div>
